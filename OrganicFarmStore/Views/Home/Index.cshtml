@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/produce.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/patel-brothers.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/grocery-stores-banner.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container" style="margin-top:50px;">
    <div class="row">
        @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="card text-center" style="margin-bottom: 30px;">
                
                <div class="card-body">
                    <img class="img-fluid card-img-top" src="@product.Image" />
                    <div class="card-title">
                        <h3>@product.Name</h3>
                    </div>
                    <p>@product.Description</p>
                    <h4>Price: @(product.Price.HasValue ? product.Price.Value.ToString("C") : "No Price")</h4>
                    <a class="btn btn-primary" href="/Product/Details/@product.ID">View This Product</a>
                </div>
            </div>
        </div>

}

    </div>
    </div>

