@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<div class="mx-auto" style="width:40%;">
    <h4 class="mt-5 mb-3">Register your account</h4>
    @if (!ViewData.ModelState.IsValid)
    {

        <div class="alert alert-danger">
            <div asp-validation-summary="All"></div>
        </div>

    }
    <form method="post" asp-action="Register" asp-controller="Account">

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" placeholder="Enter your First Name" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" placeholder="Enter your Last Name" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" placeholder="(111)-222-3333" class="form-control" type="tel" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" placeholder="Enter your Email" class="form-control" type="email" />
        </div>

        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" placeholder="Enter your username" class="form-control" type="text" />

        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" placeholder="Enter your password" class="form-control" type="password" />
        </div>

        <input type="submit" class="btn btn-primary" value="Submit" />
    </form>

</div>

