@model Checkout
@{
    ViewData["Title"] = "Index";
}

@if (true)
{

}

<h2>Welcome to your Checkout Page</h2>
@if (!ViewData.ModelState.IsValid)
{

    <div class="alert alert-danger">
        <div asp-validation-summary="All"></div>
    </div>

}
<form method="post" asp-action="Index" asp-controller="Checkout">

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" type="text" placeholder="Enter your first name" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" type="text" placeholder="Enter your last name" />
    </div>
    <div class="form-group">
        <label asp-for="CreditCardNumber"></label>
        <input asp-for="CreditCardNumber" class="form-control" placeholder="Enter the credit card number " />
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" type="date" placeholder="Enter the expiration date" />
    </div>
    <div class="form-group">
        <label asp-for="BillingAddress"></label>
        <input asp-for="BillingAddress" class="form-control" type="text" placeholder="Enter your bill address" />
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" type="text" placeholder="Enter your city" />
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" class="form-control" type="text" placeholder="Enter your state" />
    </div>
    <div class="form-group">
        <label asp-for="PostalCode"></label>
        <input asp-for="PostalCode" class="form-control" type="number" placeholder="Enter your postal code" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" type="tel" placeholder="Enter your phone number" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email address" />
    </div>
    <input class="btn btn-primary" value="Submit" type="submit" />
</form>

